{{#if icons}}
  <div class="icons">
    <span class="selection-indicator"></span>
    {{#each icons as |icon|}}
      {{d-icon icon translatedtitle=(dasherize title)}}
    {{/each}}
  </div>
{{/if}}

<div class="texts">
  <span class="name">{{html-safe label}}</span>
  {{#if item.pro}}
    <span class="pro-label">{{i18n "admin.wizard.pro.label"}}</span>
  {{/if}}
</div>
